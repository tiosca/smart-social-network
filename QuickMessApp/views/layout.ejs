<nav class="navbar-dark bg-black">

    <ul class="nav nav-tabs nav-fill">
        <!-- <li class="navbar-item pl-5 pr-5 ml-5 mr-5">
            <img src="/images/quickmesslogo.png" alt="" style="height:50px">
        </li> -->

        <a href="/" class="navbar-item pl-5 pr-5 ml-5 mr-5">
            <img src="/images/quickmesslogo.png" alt="" style="height:50px">
          </a>
        <%if (typeof user != "undefined"){%>
            <!-- <li class="nav-item">
                <a class="nav-link p-2" href="/"><i class="fas fa-home"></i> Home</a>
            </li> -->
