<!-- Login Form -->

<div class="row justify-content-center pt-5 h-100">

    <div class="d-flex justify-content-center p-2 w-25 bg-dark col-sm-6 col md-4 col-lg-3" style="border-radius: 20px; border: solid #ffa500;">
        <form id="login_form" action="/login" method="post">
            <img class="mx-auto d-block mt-2 mb-2" src="/images/quickmesslogo.png" alt="" style="height:50px">
            <% if (typeof error != "undefined" && error.status) { %>
                <div class="input-group">
                    <div class="col text-center p-1 m-1" style="color: #ff0000">*** <%= error.message %> ***</div>
                </div>
            <% } %>
            <div class="input-group">
                <div class="input-group-prepend">
                <span class="input-group-text">
                    <i class="fa fa-user" aria-hidden="true"></i>
                </span>
                </div>
                <input type="text" id="username" name="username" placeholder="username" style="color:#f700ff" required>
            </div>

            <div class="input-group mt-3">
                <div class="input-group-prepend">
                <span class="input-group-text">
                    <i class="fa fa-lock" aria-hidden="true"></i>
                </span>
                </div>
                <input type="password" id="password" name="password" placeholder="password" required>
            </div>
            <div class="d-flex justify-content-center login_container my-3">
                <div class="col">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
                <div class="col">
                    <a type="submit" href="/register" class="btn btn-primary">Register</a>
                </div>
            </div>
        </form>
    </div>
</div>
